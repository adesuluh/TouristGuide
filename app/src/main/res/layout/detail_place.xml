<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:src="@drawable/placeholder"
           android:padding="16dp"
            android:id="@+id/imgView"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titlePlace"
            android:text="Pantai Balekambang"
            android:textSize="28dp"
            android:gravity="center"
            android:padding="16dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelAdressPlace"
            android:text="Alamat : "
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:textStyle="bold"
            android:textSize="14dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addressPlace"
            android:text="Kecamatan Bantur, 65Km South of Malang"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:padding="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelTypePlace"
            android:text="Type : "
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:padding="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/typePlace"
            android:text="Pantai"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelLatitudePlace"
            android:text="Latitude : "
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:padding="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/latitudePlace"
            android:text="112.5391° E"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:padding="8dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelLongitudePlace"
            android:text="Longitude : "
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:padding="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/longitudePlace"
            android:text="8.4034° S"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:padding="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelDescriptionPlace"
            android:text="Description : "
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:padding="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionPlace"
            android:text="loremloremlorem"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:padding="8dp"
            />
        <Button
            android:id="@+id/mapOpenButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Open in Map"
            android:onClick="openMap"/>

    </LinearLayout>

</ScrollView>